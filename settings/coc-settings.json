{
  "vetur.trace.server": "verbose",
  "vetur.completion.autoImport": true,
  "vetur.completion.scaffoldSnippetSources": {
    "workspace": "üíº",
    "user": "üóíÔ∏è",
    "vetur": "‚úå"
  },
  "vetur.validation.style": true,
  "vetur.format.defaultFormatter.scss": "prettier",
  "vetur.format.enable": true,
  "vetur.format.defaultFormatter.html": "prettier",
  "coc.preferences.formatOnSave": true,
  "snippets.loadVSCodeProjectSnippets": false,
  "snippets.textmateSnippetsRoots": ["~/.config/nvim/vscode-snippets"],
  "codeLens.enable": true,
  "snippets.extends": { "vue": ["quasar"] },
  "diagnostic.format": "[%source]%code: %message [%severity]",
  "yaml.schemas": {
    "https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json": [
      "**/docker-compose.yml",
      "**/docker-compose.yaml",
      "**/docker-compose.*.yml",
      "**/docker-compose.*.yaml"
    ],
    "https://json.schemastore.org/circleciconfig": [".circleci/config.yml"],
    "https://json.schemastore.org/gitlab-ci": [".gitlab-ci.yml"],
    "https://json.schemastore.org/travis": [".travis.yml"],
    "https://json.schemastore.org/omnisharp": ["omnisharp.json"],
    "kubernetes": [
      "Deployment.yaml",
      "Deployment.yml",
      "Deployment.*.yml",
      "Deployment.*.yaml",
      "Service.yaml",
      "Service.yml",
      "Service.*.yml",
      "Service.*.yaml",
      "Ingress.yaml",
      "Ingress.yml",
      "Ingress.*.yml",
      "Ingress.*.yaml",
      "Chart.yaml",
      "Chart.yml",
      "Chart.*.yml",
      "Chart.*.yaml",
      "Values.yaml",
      "Values.yml",
      "Values.*.yml",
      "Values.*.yaml"
    ]
  },
  "diagnostic.virtualText": true,
  "markdownlint.onOpen": true,
  "markdownlint.onSave": true,
  // python
  "python.formatting.provider": "black",
  "python.linting.pylintArgs": ["--disable=C0111"]
}
